@model IEnumerable<SlideItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Shipping Items</h4>
                  <a asp-action="Create">Create Slide</a>
                  <p class="card-description">
                    Add class <code>.table-striped</code>
                  </p>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                           Image
                          </th>
                          <th>
                            Title
                          </th>
                          <th>
                            Subtitle
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var slide in Model)
                        {
                                    <tr>
                                  <td class="py-1">
                                            <img src="~/assets/img/slider/@slide.Image" alt="image"/>
                                  </td>
                                  <td>
                                    @slide.Title
                                  </td>
                                  <td>
                                    @slide.Subtitle
                                  </td>
                                  <td>
                                            <a asp-action="Detail" asp-route-id="@slide.Id"  > Detail</a>
                                                <a asp-action="Update" asp-route-id="@slide.Id" >Update</a>
                                                <a asp-action="Delete" asp-route-id="@slide.Id" >Delete</a>
                                  </td>
                                </tr>
                        }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>