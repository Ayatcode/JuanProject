@using JuanProj.ViewModels;
@model SlideCreateVm
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

  <div class="col-md-6 grid-margin stretch-card">
    <div class="card">
       <div class="card-body">
         <h4 class="card-title">Create Slide</h4>
        <form class="forms-sample" method="post" enctype="multipart/form-data">
         <div class="form-group">
            <label for="exampleInputUsername1">Image</label>
           <input type="file" asp-for="Image" class="form-control"  placeholder="Image">
          <span class="text-danger" asp-validation-for="Image">  </span>
         </div>
                    <div class="form-group">
                      <label for="exampleInputUsername1">Title</label>
                      <input asp-for="Title" class="form-control"  placeholder="Offer">
                      <span class="text-danger" asp-validation-for="Title">  </span>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputUsername1">Subtitle</label>
                      <input asp-for="Subtitle" class="form-control"  placeholder="Subtitle">
                      <span class="text-danger" asp-validation-for="Subtitle">  </span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
        </form>
       </div>
    </div>
   </div>