@model SlideItem
@{
    ViewData["Title"] = "Update";
}



  <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update Shipping</h4>
                  <img src="~/assets/images/website-images/@Model.Photo" height="50px"/>
                  <form class="forms-sample" method="post">
                   <input type="file" asp-for="Photo" class="form-control"  placeholder="Photo">
                    <div class="form-group">
                      <label for="exampleInputUsername1">Photo</label>
                      <input asp-for="Photo" class="form-control"  placeholder="Photo">
                      <span class="text-danger" asp-validation-for="Photo">  </span>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputUsername1">Title</label>
                      <input asp-for="Title" class="form-control"  placeholder="Title">
                      <span class="text-danger" asp-validation-for="Title">  </span>
                    </div>
                    <div class="form-group">
                    <label for="exampleInputUsername1">Description</label>
                      <input asp-for="Description" class="form-control"  placeholder="Description">
                      <span class="text-danger" asp-validation-for="Description">  </span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                  </form>
                </div>
              </div>
            </div>